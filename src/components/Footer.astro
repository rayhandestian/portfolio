---
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: 'en' | 'id';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <p class="footer-text">{t('footer.copyright').replace('{year}', currentYear.toString())}</p>
  </div>
</footer>

<style>
  .footer {
    padding: var(--space-xl) 0;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .footer-text {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    text-align: center;
    margin: 0;
  }
</style>
