---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang?: string;
}

const { 
  title, 
  description = "Rayhan - Computer Science Student, Full-Stack Developer, and Game Dev Enthusiast.",
  lang = "en" 
} = Astro.props;

// Construct full canonical URLs for hreflang
const siteUrl = "https://rayhan.dev"; // Replace with your actual domain or use Astro.url.origin if configured
---

<!doctype html>
<html lang={lang} data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Rayhan" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    
    <!-- i18n Alternate Links -->
    <link rel="alternate" hreflang="en" href={siteUrl} />
    <link rel="alternate" hreflang="id" href={`${siteUrl}/id/`} />
    <link rel="alternate" hreflang="x-default" href={siteUrl} />

    <title>{title}</title>
    <script is:inline>
      // Apply theme before render to avoid flash
      (function() {
        const theme = localStorage.getItem('theme') || 'dark';
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
    <script src="https://unpkg.com/lenis@1.1.18/dist/lenis.min.js"></script>
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        const lenis = new Lenis({
          duration: 1.2,
          easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
          orientation: 'vertical',
          gestureOrientation: 'vertical',
          smoothWheel: true,
          wheelMultiplier: 1.0,
          smoothTouch: false,
          touchMultiplier: 2,
        });

        function raf(time) {
          lenis.raf(time);
          requestAnimationFrame(raf);
        }

        requestAnimationFrame(raf);
      });
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
